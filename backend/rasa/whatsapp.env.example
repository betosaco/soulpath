# WhatsApp Business API Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# WHATSAPP BUSINESS API CONFIGURATION
# ===========================================
# Access Token from Meta Business Manager
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here

# Phone Number ID from WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Business Account ID from Meta Business Manager
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# Webhook URL (your domain + /webhooks/whatsapp/webhook)
WHATSAPP_WEBHOOK_URL=https://your-domain.com/webhooks/whatsapp/webhook

# Verify Token (custom string you set in Meta)
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_here

# ===========================================
# RASA CONFIGURATION
# ===========================================
# Rasa server URL
RASA_URL=http://localhost:5005

# Rasa model name
RASA_MODEL=rasa

# Confidence threshold for intent recognition
RASA_CONFIDENCE_THRESHOLD=0.7

# ===========================================
# OPENROUTER CONFIGURATION
# ===========================================
# API Key from OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter base URL
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Model to use
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Temperature for response generation
OPENROUTER_TEMPERATURE=0.7

# Maximum tokens in response
OPENROUTER_MAX_TOKENS=1000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Enable logging
LOGGING_ENABLED=true

# Log level
LOGGING_LEVEL=info

# Log storage method
LOGGING_STORAGE=console
